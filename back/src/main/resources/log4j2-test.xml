<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId},%X{spanId}] %logger{36} - %msg%n
        </Property>
        <Property name="JSON_PATTERN">
            {"timestamp":"%d{yyyy-MM-dd HH:mm:ss.SSS}","level":"%-5level","thread":"%thread","logger":"%logger{36}","message":"%msg","traceId":"%X{traceId:-}","spanId":"%X{spanId:-}","mdc":"%X"}%n
        </Property>
        <Property name="LOG_DIR">./logs</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender (테스트용) -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- File Appender for Loki/Promtail (JSON 형태) - 테스트용 -->
        <RollingFile name="LokiFileAppender" fileName="${LOG_DIR}/test-orakgaraki.log"
                     filePattern="${LOG_DIR}/test-orakgaraki-%d{yyyy-MM-dd}-%i.log.gz">
            <JsonTemplateLayout eventTemplateUri="classpath:EcsLayout.json"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="50MB"/>
            </Policies>
            <DefaultRolloverStrategy max="3"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Spring Framework 로그 레벨 -->
        <Logger name="org.springframework" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- 테스트 관련 로그 -->
        <Logger name="org.springframework.test" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Hibernate/JPA 로그 레벨 (테스트에서는 최소화) -->
        <Logger name="org.hibernate" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Hibernate 초기화 로그들 숨김 (테스트환경) -->
        <Logger name="org.hibernate.query.sqm.function.SqmFunctionRegistry" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.hibernate.persister" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.hibernate.tool.schema" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.hibernate.validator" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Hibernate 타입/ID 생성기 등록 로그 숨김 -->
        <Logger name="org.hibernate.type.BasicTypeRegistry" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.hibernate.orm.idgen.factory" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Hibernate 기타 초기화 로그들 -->
        <Logger name="org.hibernate.integrator" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.hibernate.cache" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.hibernate.boot" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="org.hibernate.cfg" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- HikariCP 설정 로그 숨김 -->
        <Logger name="com.zaxxer.hikari.HikariConfig" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Hibernate HQL 함수 등록 로그 숨김 -->
        <Logger name="org.hibernate.HQL_FUNCTIONS" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- SQL 로그 끄기 (테스트 성능) -->
        <Logger name="org.hibernate.SQL" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- 애플리케이션 패키지 로그 (테스트 환경에서도 파일 로깅) -->
        <Logger name="com.ssafy.lab.orak" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="LokiFileAppender"/>
        </Logger>

        <!-- Security 로그 -->
        <Logger name="org.springframework.security" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- AWS SDK 로그 -->
        <Logger name="software.amazon.awssdk" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Redis 로그 -->
        <Logger name="org.springframework.data.redis" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="WARN">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>